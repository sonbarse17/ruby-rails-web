source 'https://rubygems.org'

# Rails
gem 'rails', '~> 7.0.0'

# Database
gem 'sqlite3', '~> 1.4'

# Use Puma as the app server
gem 'puma', '~> 5.0'

# Use importmap for JavaScript modules
gem 'importmap-rails'

# Use SCSS for stylesheets
gem 'sassc-rails'

# Logger for Rails 7
gem 'logger'

# Other useful gems
gem 'bootsnap', require: false
