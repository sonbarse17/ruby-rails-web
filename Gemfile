source 'https://rubygems.org'

# Specify your gem's dependencies in my-rails-app.gemspec
#gemspec

# Rails
gem 'rails', '~> 6.1.0'

# Database
gem 'sqlite3', '~> 1.4'

# Use Puma as the app server
gem 'puma', '~> 5.0'

# Use SCSS for stylesheets
gem 'sass-rails', '>= 6'

# Use Uglifier as a JavaScript compressor
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 5.0'

# Use jbuilder for JSON views
gem 'jbuilder', '~> 2.7'

# Use the following gems for testing
group :development, :test do
  gem 'byebug'
  gem 'rspec-rails', '~> 4.0.0'
end

# Use the following gems for production
group :production do
  gem 'pg', '>= 0.18', '< 2.0'
end

# Other useful gems
gem 'devise' # For authentication
gem 'bootstrap', '~> 5.0.0' # For styling with Bootstrap
gem 'bootsnap', '>= 1.4.4', require: false

# Add any additional gems below this line
